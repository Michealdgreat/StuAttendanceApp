<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="StuAttendanceApp.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:StuAttendanceApp"
	xmlns:views="clr-namespace:StuAttendanceApp.Views">

	<TabBar>
		<ShellContent
			Title="Main"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:MainPage}" />
		<ShellContent
			Title="Welcome"
			Icon="iconmediaelement.png"
			ContentTemplate="{DataTemplate views:WelcomePage}" />
		<ShellContent
			Title="Scan"
			Icon="iconlottie.png"
			ContentTemplate="{DataTemplate views:ScanPage}" />
	</TabBar>
</Shell>
