<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="StudentAttendanceApp.MVVM.Views.ScanPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:local="clr-namespace:StudentAttendanceApp.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:StudentAttendance.MAUI.MVVM.ViewModels"
    x:DataType="vm:ScanViewModel"
    mc:Ignorable="d">

    <StackLayout Padding="20" Spacing="15">
        <Label
                FontSize="24"
                HorizontalOptions="Center"
                Text="NFC Tag Reader"
                VerticalOptions="Center" />

        <Button
               Clicked="Button_Clicked_1"
                HorizontalOptions="Center"
                Text="Start Listening" />

        <Button
                Clicked="Button_Clicked"
                HorizontalOptions="Center"
                Text="Stop Listening" />

        <Label
                FontSize="16"
                Text="RFID Tag:"
                VerticalOptions="Center" />

        <Label
                FontSize="20"
                HorizontalOptions="Center"
                Text="{Binding StringData}"
                TextColor="White"
                VerticalOptions="CenterAndExpand" />
    </StackLayout>


</ContentPage>
