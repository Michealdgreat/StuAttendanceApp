<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="StudentAttendanceApp.MVVM.Views.StartUpPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    BackgroundColor="{StaticResource Gray650}"
    Loaded="ContentPage_Loaded"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource Gray650}" StatusBarStyle="{AppThemeBinding Dark='LightContent', Light='LightContent'}" />
    </ContentPage.Behaviors>
    <VerticalStackLayout VerticalOptions="Center">
        <Grid HorizontalOptions="Center" VerticalOptions="Center">
            <skia:SKLottieView
                Background="{StaticResource Gray650}"
                HeightRequest="40"
                RepeatCount="-1"
                RepeatMode="Restart"
                Scale="1"
                Source="loadingindicator.json" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>