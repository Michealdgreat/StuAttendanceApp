<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="StudentAttendanceApp.MVVM.Views.ProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:local="clr-namespace:StudentAttendanceApp.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:StudentAttendanceApp.MVVM.ViewModels"
    x:DataType="vm:ProfileViewModel"
    BackgroundColor="{StaticResource Gray650}"
    Shell.BackgroundColor="{StaticResource Primary}"
    mc:Ignorable="d">
    <ContentPage.BindingContext>
        <vm:ProfileViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>

                <Border
                    Margin="20"
                    BackgroundColor="#404040"
                    HeightRequest="150"
                    Stroke="{StaticResource Primary}"
                    StrokeThickness="10"
                    WidthRequest="150">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="100" />
                    </Border.StrokeShape>
                    <Image HeightRequest="100" Source="user_icon" />
                </Border>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
