<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="StudentAttendanceApp.MVVM.Views.ScanPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:local="clr-namespace:StudentAttendanceApp.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:StudentAttendanceApp.MVVM.ViewModels"
    x:DataType="vm:ScanViewModel"
    BackgroundColor="#1C1C1C"
    Shell.BackgroundColor="#1C1C1C"
    mc:Ignorable="d">
    <ContentPage.BindingContext>
        <vm:ScanViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="scanned tag will show up here" />
            <Label
                FontSize="40"
                HorizontalOptions="Center"
                Text="{Binding RfidTag}"
                TextColor="Purple"
                VerticalOptions="Center" />

            <Button Command="{Binding StartListeningCommand}" Text="Scan Tag" />
        </VerticalStackLayout>

    </ContentPage.Content>
</ContentPage>
