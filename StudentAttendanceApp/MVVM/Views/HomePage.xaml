<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="StudentAttendanceApp.MVVM.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:local="clr-namespace:StudentAttendanceApp.MVVM.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:StudentAttendanceApp.MVVM.ViewModels"
    x:DataType="vm:HomeViewModel"
    BackgroundColor="{AppThemeBinding Dark=#212121,
                                      Light=White}"
    Shell.BackgroundColor="{AppThemeBinding Dark=#212121,
                                            Light=White}"
    mc:Ignorable="d">
    <ContentPage.BindingContext>
        <vm:HomeViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label
                HorizontalOptions="Center"
                Text="Welcome to .NET MAUI!!!"
                TextColor="White"
                VerticalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
